{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "jsx": "preserve",
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      // Shared
      "@api/*": ["./api/*"],
      "@common/*": ["./common/*"],
      "@uikit/*": ["./uikit/*"],
      // Apps
      "@app/*": ["./app/*"],
      "@admin/*": ["./admin/*"],
      "@graphics/*": ["./graphics/*"],
    }
  }
}
